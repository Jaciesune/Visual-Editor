<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VE"
             xmlns:tools="clr-namespace:VE.Tools"
             x:Class="VE.App">
    <Application.Resources>
        <Color x:Key="Primary">#393E46</Color>
        <Color x:Key="PrimaryText">White</Color>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
            <Setter Property="TextColor" Value="{StaticResource PrimaryText}"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <ResourceDictionary>
            <tools:RgbStringToIntConverter x:Key="RgbStringToIntConverter"/>
            <tools:BoolToEyeIconConverter x:Key="BoolToEyeIconConverter"/>
            <tools:BackgroundDeleteBlockerConverter x:Key="BackgroundDeleteBlockerConverter" />
            <tools:SelectedLayerColorConverter x:Key="SelectedLayerColorConverter" />
            <tools:IsSelectedToColorConverter x:Key="IsSelectedToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
